<!--pages/view/view.wxml-->

<!-- 1.基本使用 -->
<view class="box">hahaha</view>
<view>hehehe</view>

<!-- 2.hover-class:当用户按下组件,显示的样式 -->
<view class="box1" 
  hover-class="hover-view"
  hover-stay-time="0">
  box1
</view>

<view class="box2" hover-class="box2-hover">
  <view class="box1" 
    hover-class="hover-view"
    hover-stay-time="0"
    hover-stop-propagation="true">
    box2
  </view>
</view>
