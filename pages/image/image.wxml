<!-- 补充：显示相册图片 -->
<button bindtap="handleChooseAlbum">选中图片</button>
<image src="{{imagePath}}"></image>

<!--
   3. bindload 监听图片加载完成
      lazy-load 图片即将进入上下三屏时候加载
 -->
<image wx:for="{{1}}" src="https://test-cream.oss-cn-hangzhou.aliyuncs.com/business-pic/2020/04/08/15863195603107039.jpg"
bindload="handleImageLoad"
lazy-load />

<!-- 4.show-menu-by-longpress 长按图片出现识别小程序码 -->
<image 
show-menu-by-longpress
src="https://test-cream.oss-cn-hangzhou.aliyuncs.com/business-pic/2020/04/08/15863195603107039.jpg"
/>